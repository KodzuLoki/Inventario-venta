<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.miempresa.miproyecto.controller.AddTrabajadorController" spacing="10" alignment="center">
    <Label text="Agregar Trabajador" />

    <HBox spacing="10">
        <Label text="Nombre:" />
        <TextField fx:id="nombreTextField" />
    </HBox>

    <HBox spacing="10">
        <Label text="Puesto:" />
        <TextField fx:id="puestoTextField" />
    </HBox>

    <HBox spacing="10">
        <Label text="Salario:" />
        <TextField fx:id="salarioTextField" />
    </HBox>

    <Button text="Guardar" onAction="#handleSaveTrabajador" />
    <Button text="Cancelar" onAction="#handleCancel" />
</VBox>
